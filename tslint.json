{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-react-hooks"
  ],
  "linterOptions": {
    "exclude": [
      "**/__tests__/**",
      "**/*.test.ts"
    ]
  },
  "jsRules": {},
  "rules": {
    "quotemark": [
      true,
      "double",
      "avoid-escape",
      "avoid-template"
    ],
    "return-undefined": true,
    "arrow-parens": false,
    "curly": false,
    "interface-name": false,
    "no-console": [
      true,
      "log",
      "trace"
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ],
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "react-hooks-nesting": "error"
  },
  "rulesDirectory": []
}
