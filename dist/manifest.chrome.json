{
  "manifest_version": 2,
  "name": "MyAnimeStream",
  "short_name": "MAS",
  "version": "0.3.0",
  "description": "__MSG_ext_description__",
  "default_locale": "en_GB",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "https://*/"
  ],
  "content_security_policy": "default-src 'self'; script-src 'self' https://sentry.io; style-src 'unsafe-inline' https:; img-src * 'self' data: https:; media-src *; font-src https:; connect-src *; report-uri https://sentry.io/api/1361461/security/?sentry_key=cd0b73d8cc56445ca49d154ca6e7f12d",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": "icon32.png",
    "default_title": "__MSG_ext_tooltip__",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": [
        "*://kitsu.io/*"
      ],
      "js": [
        "js/service/kitsu.js"
      ]
    },
    {
      "run_at": "document_end",
      "matches": [
        "*://myanimelist.net/*"
      ],
      "js": [
        "js/service/myanimelist.js"
      ]
    }
  ]
}
